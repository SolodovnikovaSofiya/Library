            <RowDefinition Height="80*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/images/фон.jpg"/>
        </Grid.Background>
        <Button Content="Таблица книги" FontSize="16"  FontFamily="Verdana" VerticalAlignment="Center" Height="40" Width="216" Click="ButtonBook_Click" HorizontalAlignment="Center" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF1CAC5" Offset="1"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFDE8076" Offset="0.498"/>
                    <GradientStop Color="#FFEAC6E0"/>
                    <GradientStop Color="#FFF3D0CC"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Таблица читатели" HorizontalAlignment="Center" FontSize="16"  FontFamily="Verdana" VerticalAlignment="Center" Height="40" Width="216" Click="ButtonReader_Click" Grid.Row="1">
