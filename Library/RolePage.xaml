<Page x:Class="Library.RolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RolePage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/фон.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>

            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>

            <RowDefinition Height="46*"/>
        </Grid.RowDefinitions>

        <Button Name="ButtonReaders" Content="Библиотекарь" Width="216" HorizontalAlignment="Center" FontSize="16"  FontFamily="Verdana" Click="ButtonBiblio_Click" Grid.Row="3" Height="50" VerticalAlignment="Center">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF1CAC5" Offset="1"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFDE8076" Offset="0.498"/>
                    <GradientStop Color="#FFEAC6E0"/>
                    <GradientStop Color="#FFF3D0CC"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Читатель"  Grid.Row="2" Width="216" HorizontalAlignment="Center" FontSize="16"  FontFamily="Verdana" Click="ButtonChit_Click" BorderBrush="#FF907C7A" Height="50" VerticalAlignment="Center">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF1CAC5" Offset="1"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFDE8076" Offset="0.498"/>
                    <GradientStop Color="#FFEAC6E0"/>
                    <GradientStop Color="#FFF3D0CC"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button Content="Администратор" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Height="50" Width="216" FontSize="16" FontFamily="Verdana" Click="ButtonMain_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF1CAC5" Offset="1"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFDE8076" Offset="0.498"/>
                    <GradientStop Color="#FFEAC6E0"/>
                    <GradientStop Color="#FFF3D0CC"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Выберите роль" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="234" FontFamily="Verdana" FontSize="24" FontWeight="Bold" Background="{x:Null}" Foreground="#FFDF857B" BorderBrush="#FF907C7A"/>
        <Button Content="Справка" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="50" Width="216" FontSize="16" FontFamily="Verdana" Click="Button_btn">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF1CAC5" Offset="1"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFDE8076" Offset="0.498"/>
                    <GradientStop Color="#FFEAC6E0"/>
                    <GradientStop Color="#FFF3D0CC"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Page>
